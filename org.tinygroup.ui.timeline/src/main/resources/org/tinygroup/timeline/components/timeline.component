#macro timeLineBox(timeLineId timeLineClass timeLineMap)
	<div #if(timeLineId) id="${timeLineId}"#end #if(timeLineClass) class="${timeLineClass}"#end #mapToHtml(timeLineMap)>#bodyContent</div>
#end
#macro datesBox(datesId datesClass)
	<ul id="${datesId}" #if(datesClass) class="${datesClass}"#end>#bodyContent</ul>
#end

#macro datesInfo(datesAHref datesInfoMap)
<li #mapToHtml(datesInfoMap)>
	<a href="#${datesAHref}">#bodyContent</a>
</li>
#end

#macro timeLineLi(timeLineLiId timeLineLiClass)
	<li #if(timeLineLiId) id="${timeLineLiId}"#end #if(timeLineLiClass) class="${timeLineLiClass}"#end>#bodyContent</li>
#end

#macro infoImg(infoImgSrc infoImgW infoImgH infoImgMap)
	<img src="${infoImgSrc}" width="${infoImgW}" height="${infoImgH}" #mapToHtml(infoImgMap)/>
#end