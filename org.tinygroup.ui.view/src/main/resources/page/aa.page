    <div class="col-xs-8 col-xs-offset-2"><input type="text" id="search-input" class="form-control search-popover-input"></div>
</div>

<script>


          
    $(function(){
        $("#relative-info").on("click","[data-select]",function(){

        });
        $(document).off("click.search").on("click.search",function(e){
           if(!$(e.target).hasClass("search-popover-input")){$("#search-input-box").hide()}
        });
        $(".search-popover-input").on("input change focus",function(ee){
            var _event=ee;
            var _this=$(this);
            var _dom=$("#search-input-box");

            if(_dom.size()==0){
                $("body").append("<div id='search-input-box' class='search-input-box'></div>");
            }
            if(!_dom.is(":visible")){
                var box=_this.offset();
                _dom.css({left:box.left,top:box.top+_this.outerHeight(),"width":_this.outerWidth()}).fadeIn();
            }


            var val=$(this).val();
            val= $.trim(val);
            if(!val){
                $("#search-input-box").hide();
            }else{
                //$("#search-input-box").fadeIn();
               $.ajax({
                    url:"#link("/page/picture.pagelet")",
                    data:{k:val},
                    success:function(data){
                        $("#search-input-box").html(data);
                    }
                })
            }

        })
    })
</script>

