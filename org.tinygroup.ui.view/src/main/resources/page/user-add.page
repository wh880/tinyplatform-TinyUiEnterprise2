<form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">信息</label>
                    <div class="col-lg-8">
                        <div class="bs-component">
                            <p class="form-control-static text-muted">email@example.com</p>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputStandard" class="col-lg-3 control-label">标准</label>
                    <div class="col-lg-8">
